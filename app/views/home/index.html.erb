<div class="category-list">
	<% @category.each do |category| %>
		<button class="btn btn btn-secondary"><%= category.name %></button>
	<% end %>
	<button class="btn btn btn-secondary active">All</button>
</div>

<div class="box-featured">
	<div class="box-header">
		Exchange
	</div>


	<div class="box-content">
	<%= will_paginate @deals %>
		<div class="row">

			<% @deals.each do |deal| %>
				<div class="col-sm-3">
					<div class="box-item">
					  <img class="box-item-img" src="<%= deal.book.image %>" alt="Card image cap">

					  <div class="box-item-title">
					  	<%= link_to truncate(deal.book.name, length: 20), deal %>
					  </div>

					  <div class="box-item-description">
					  	<%=  truncate(deal.description, length: 50)%>
					  </div>

					  <div class="box-item-button">
					  	<button class="btn btn-primary btn-block"><%= deal.deal_type %></button>
					  </div>

					</div>
				</div>
			<% end %>
    </div>
	</div>
</div>

<%= will_paginate @deals %>
