<%= form_for [@book_deal, comment] do |form| %>
  <%= render "shared/error", object: comment %>

  <div class="form-group">
    <%= form.text_area :content, id: :comment_content, rows: 5, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
