<%= render 'shared/error', object: book %>
<%= form_with(model: book, local: true) do |form| %>

  <div class="form-group row">
    <lable class="col-sm-4 lable-control"><span class="require">*</span>Name:</lable>
    <div class="col-sm-5">
      <%= form.text_field :name, class: "form-control", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <lable class="col-sm-4 lable-control"><span class="require">*</span>Image:</lable>
    <div class="col-sm-5">
      <%= form.text_field :image, class: "form-control" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :pages %>
    <%= form.number_field :pages, id: :book_pages %>
  </div>

  <div class="field">
    <%= form.label :publisher_id %>
    <%= form.text_field :publisher_id, id: :book_publisher_id %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.text_field :category_id, id: :book_category_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
